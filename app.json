{
    "id": "com.cyclone-software.fbcallmonitor",
    "name": {
        "en": "FritzBox CallMonitor",
        "nl": "FritzBox Telefoon Monitor"
    },
    "description": {
        "en": "This app let's monitor incomming calls from your Fritz Box!",
        "nl": "De app monitored je Fritz Box op inkomende oproepen."
    },
    "version": "0.0.6",
    "compatibility": ">=0.8.30",
    "category": "internet",
    "author": {
        "name": "Marcel Timmermans",
        "email": "marcel@timmermans.us"
    },
    "images": {
        "large": "assets/images/large.jpg",
        "small": "assets/images/small.jpg"
    },
    "permissions": [],
    "flow": {
        "triggers": [{
                "id": "fb_incomming_call",
                "title": {
                    "en": "Incomming call",
                    "nl": "Er komt een oproep binnen"
                },
                "tokens": [{
                        "name": "fb_tel_nr",
                        "title": {
                            "en": "Telephone number",
                            "nl": "Telefoon nummer"
                        }
                    },
                    {
                        "name": "fb_abonnee_name",
                        "title": {
                            "en": "Telephone Name",
                            "nl": "Abonnee Naam"
                        }
                    },
                    {
                        "name": "fb_datetime",
                        "title": {
                            "en": "Date Time",
                            "nl": "Datum Tijd"
                        }
                    }
                ]
            },
            {
                "id": "fb_call_anwsered",
                "title": {
                    "en": "Call Anwsered",
                    "nl": "U heeft opgenomen"
                },
                "tokens": [{
                        "name": "fb_tel_nr",
                        "title": {
                            "en": "Telephone number",
                            "nl": "Telefoon nummer"
                        }
                    },
                    {
                        "name": "fb_abonnee_name",
                        "title": {
                            "en": "Telephone Name",
                            "nl": "Abonnee Naam"
                        }
                    },
                    {
                        "name": "fb_datetime",
                        "title": {
                            "en": "Date Time",
                            "nl": "Datum Tijd"
                        }
                    }
                ]
            },
            {
                "id": "fb_disconnect_call",
                "title": {
                    "en": "Call ended",
                    "nl": "Oproep is beeindigd"
                },
                "tokens": [{
                    "name": "fb_duration",
                    "title": {
                        "en": "Duration",
                        "nl": "tijd"
                    }
                }]
            }
        ],
        "conditions": [{
            "id": "TelNumber",
            "title": {
                "en": "Telephone number !{{is|isn't}} ",
                "nl": "Telefoon nummer !{{is|is niet}}"
            },
            "args": [{
                "name": "telnr",
                "type": "text",
                "placeholder": {
                    "en": "Telephone number",
                    "nl": "Telefoon nummer"
                }
            }]
        }]
    }
}